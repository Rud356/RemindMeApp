<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeekDayTextStyle">
        <item name="android:textColor">@color/light_green</item>  <!-- Цвет текста -->
        <item name="android:textSize">14sp</item>                <!-- Размер текста -->
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Шрифт -->
        <item name="android:padding">4dp</item>                  <!-- Отступы -->
    </style>

    <style name="DateTextStyle">
        <item name="android:textColor">@color/black</item> <!-- Цвет текста -->
        <item name="android:textSize">16sp</item>                        <!-- Размер текста -->
        <item name="android:fontFamily">@font/nunito_regular</item>                <!-- Шрифт -->
        <item name="android:padding">10dp</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/light_green</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/smoky_blue</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:colorAccent">@color/light_green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
    </style>
    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>