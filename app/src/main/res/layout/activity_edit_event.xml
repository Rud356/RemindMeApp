<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/smoky_blue"
    >

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageButtonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редактировать"
            android:textColor="@color/light_green"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEditEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTop">

        <com.example.remindmeapp.ColorPickerView
            android:id="@+id/colorPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/circleBlue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_blue"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/circleRed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_red"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/circleGreen"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circle_green"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/circleYellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_yellow"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/circleGray"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_gray" />

        </com.example.remindmeapp.ColorPickerView>

        <EditText
            android:id="@+id/editTextNameEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="login"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/nunito_mediumitalic"
            android:hint="Название события*"
            android:inputType="text"
            android:paddingVertical="13dp"
            android:paddingStart="20dp"
            android:textColor="@color/static_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <EditText
            android:id="@+id/editTextNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="ip-address"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/nunito_mediumitalic"
            android:hint="Сообщение в уведомлении"
            android:inputType="text"
            android:paddingVertical="13dp"
            android:paddingStart="20dp"
            android:textColor="@color/static_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <EditText
            android:id="@+id/editTextDate"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="password"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/ic_calendar"
            android:ems="10"
            android:fontFamily="@font/nunito_mediumitalic"
            android:hint="Дата"
            android:inputType="date"
            android:paddingHorizontal="20dp"
            android:paddingVertical="13dp"
            android:textColor="@color/static_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/timeStart"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="timeStart"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_time"
                android:ems="7"
                android:fontFamily="@font/nunito_mediumitalic"
                android:hint="Время"
                android:inputType="time"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp"
                android:textColor="@color/static_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <com.example.remindmeapp.RepeatSelectorView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repeatSelector">
            </com.example.remindmeapp.RepeatSelectorView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        app:layout_constraintBottom_toBottomOf="@id/edit_event"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="2dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#CF0000"
            android:fontFamily="@font/nunito_bold"
            android:text="Удалить"
            android:textAllCaps="false"
            android:textColor="@color/static_white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Изменить"
            android:textColor="@color/static_white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/light_green"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>