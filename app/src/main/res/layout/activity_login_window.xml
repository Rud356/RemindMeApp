<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_window"
    android:background="@color/smoky_blue"
    tools:context=".fragments.MainActivity">

    <ImageButton
        android:visibility="gone"
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="back image button"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="clover icon"
                android:src="@drawable/ic_clover"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Вход"
                tools:ignore="HardcodedText,RtlSymmetry"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:paddingEnd="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutInputLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textViewLogin"
            tools:layout_editor_absoluteX="60dp">

            <EditText
                android:id="@+id/editTextIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="ip-address"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/nunito_mediumitalic"
                android:hint="@string/form_input_ip"
                android:inputType="text"
                android:paddingVertical="13dp"
                android:paddingStart="20dp"
                android:text="10.0.2.2"
                android:textColor="@color/static_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/editTextLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="login"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/nunito_mediumitalic"
                android:textColor="@color/static_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp"
                android:hint="@string/form_input_login"
                android:inputType="text"
                android:paddingVertical="13dp"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="password"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/nunito_mediumitalic"
                android:textColor="@color/static_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp"
                android:hint="@string/form_input_password"
                android:inputType="textPassword"
                android:paddingVertical="13dp"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#41993E"
            android:fontFamily="@font/nunito_regular"
            android:paddingHorizontal="40dp"
            android:text="Войти"
            tools:ignore="HardcodedText"
            android:textColor="@color/static_white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@drawable/button_login_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutInputLogin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin">

            <TextView
                android:id="@+id/textViewAnswerRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nunito_regular"
                android:textSize="16sp"
                android:text="Ещё нет профиля?"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_mediumitalic"
                android:text="Регистрация"
                android:textColor="@color/blue"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>